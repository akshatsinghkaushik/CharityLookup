<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/phoneNo"
        android:layout_width="310dp"
        android:layout_height="55dp"
        android:layout_below="@+id/password"
        android:layout_alignParentLeft="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/phone_number_placeholder"
        android:inputType="phone" />

    <EditText
        android:id="@+id/password"
        android:layout_width="310dp"
        android:layout_height="55dp"
        android:layout_below="@+id/email"
        android:layout_alignParentLeft="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/password_placeholder"
        android:inputType="textPassword|numberPassword" />

    <EditText
        android:id="@+id/email"
        android:layout_width="310dp"
        android:layout_height="55dp"
        android:layout_below="@+id/lastName"
        android:layout_alignParentLeft="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/email_placeholder"
        android:inputType="textWebEmailAddress|textEmailAddress" />

    <EditText
        android:id="@+id/lastName"
        android:layout_width="310dp"
        android:layout_height="55dp"
        android:layout_below="@+id/firstName"
        android:layout_alignParentLeft="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/last_name_placeholder"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/donorRegTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:elegantTextHeight="false"
        android:ems="10"
        android:gravity="center"
        android:importantForAutofill="no"
        android:inputType="none"
        android:text="@string/donor_registration_title" />

    <EditText
        android:id="@+id/firstName"
        android:layout_width="310dp"
        android:layout_height="55dp"
        android:layout_below="@+id/donorRegTitle"
        android:layout_alignParentLeft="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/first_name_placeholder"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneNo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:text="@string/register_button" />

</RelativeLayout>