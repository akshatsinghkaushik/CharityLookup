<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollVieww"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="charityRegisterAction"
        android:orientation="vertical">

        <EditText
            android:id="@+id/charityRegistPurpose"
            android:layout_width="310dp"
            android:layout_height="100dp"
            android:layout_below="@+id/charityDateEst"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:gravity="center|center_horizontal"
            android:hint="@string/registration_charity_purpose"
            android:inputType="text" />

        <EditText
            android:id="@+id/charityDateEst"
            android:layout_width="310dp"
            android:layout_height="55dp"
            android:layout_below="@+id/charityRegistWebsite"
            android:layout_alignParentLeft="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/registration_charity_date_est"
            android:inputType="date" />

        <EditText
            android:id="@+id/charityRegistWebsite"
            android:layout_width="310dp"
            android:layout_height="55dp"
            android:layout_below="@+id/charityRegistPhoneNo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/registration_charity_website"
            android:inputType="textUri" />

        <EditText
            android:id="@+id/charityRegistPhoneNo"
            android:layout_width="310dp"
            android:layout_height="55dp"
            android:layout_below="@+id/charityRegistEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/registration_phone_number"
            android:inputType="phone" />

        <EditText
            android:id="@+id/charityRegistEmail"
            android:layout_width="310dp"
            android:layout_height="55dp"
            android:layout_below="@+id/charityRegistABN"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/registration_email"
            android:inputType="textWebEmailAddress|textEmailAddress" />

        <EditText
            android:id="@+id/charityRegistEmailWarning"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@id/charityRegistEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-9dp"
            android:clickable="false"
            android:editable="false"
            android:ems="10"
            android:gravity="center"
            android:inputType="none"
            android:text="@string/registration_email_warning"
            android:textSize="15sp"
            android:typeface="normal"
            android:visibility="invisible"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/charityRegistABN"
            android:layout_width="310dp"
            android:layout_height="55dp"
            android:layout_below="@+id/charityConfirmPw"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/registration_charity_abn"
            android:inputType="number" />

        <EditText
            android:id="@+id/charityRegistPw"
            android:layout_width="310dp"
            android:layout_height="55dp"
            android:layout_below="@+id/charityRegistOtherName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/registration_password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/charityRegistPwWarning"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@id/charityRegistPw"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-9dp"
            android:clickable="false"
            android:editable="false"
            android:ems="10"
            android:gravity="center"
            android:inputType="none"
            android:text="@string/registration_password_warning"
            android:textSize="15sp"
            android:typeface="normal"
            android:visibility="invisible"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/charityConfirmPw"
            android:layout_width="310dp"
            android:layout_height="55dp"
            android:layout_below="@+id/charityRegistPw"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/registration_confirm_password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/charityConfirmPwWarning"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@id/charityConfirmPw"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-9dp"
            android:clickable="false"
            android:editable="false"
            android:ems="10"
            android:gravity="center"
            android:inputType="none"
            android:text="@string/registration_confirm_password_warning"
            android:textSize="15sp"
            android:typeface="normal"
            android:visibility="invisible"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/charityRegistOtherName"
            android:layout_width="310dp"
            android:layout_height="55dp"
            android:layout_below="@+id/charityRegistName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/registration_other_name"
            android:inputType="textShortMessage" />

        <EditText
            android:id="@+id/charityRegTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:editable="false"
            android:elegantTextHeight="false"
            android:ems="10"
            android:gravity="center"
            android:inputType="none"
            android:text="@string/title_charity_registration" />

        <EditText
            android:id="@+id/charityRegistName"
            android:layout_width="310dp"
            android:layout_height="55dp"
            android:layout_below="@+id/charityRegTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/registration_charity_name"
            android:inputType="textShortMessage|text" />

        <Button
            android:id="@+id/registerBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/charityRegistPurpose"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:onClick="charityRegisterAction"
            android:text="@string/register_button" />
    </RelativeLayout>
</ScrollView>